<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filter"
    android:orientation="vertical">

    <com.google.android.material.slider.RangeSlider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price_slider"
        android:valueFrom="0.0"
        android:valueTo="5000.0"
        android:stepSize="100.0"
        app:labelBehavior="withinBounds"
        app:values="@array/initial_range_slider_values" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to"
            android:layout_below="@+id/price_slider"
            android:layout_marginLeft="10dp"
            android:text="Min 00">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/from"
            android:layout_toRightOf="@+id/to"
            android:layout_below="@+id/price_slider"
            android:text="Max 5000"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true">
        </TextView>

    <com.google.android.material.slider.RangeSlider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bedroom_slider"
        android:layout_below="@+id/from"
        android:valueFrom="0.0"
        android:valueTo="5.0"
        android:stepSize="1.0"
        app:labelBehavior="withinBounds"
        app:values="@array/bedroom_slider_values" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tobed"
        android:layout_below="@+id/bedroom_slider"
        android:layout_marginLeft="10dp"
        android:text="Min 0">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frombed"
        android:layout_toRightOf="@+id/tobed"
        android:layout_below="@+id/bedroom_slider"
        android:text="Max 5"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/bedroom_slider">
        <Button
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
           android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</RelativeLayout>