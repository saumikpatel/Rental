<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.wishlistactivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/wishlistimage"
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/smoking" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="150dp"
            android:layout_marginLeft="17dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wishlistPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$999 - $1900"
                    android:textColor="#3cb6d3"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/wishlisticon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="120dp"
                    android:src="@drawable/wishlisticon" />

            </LinearLayout>

            <TextView
                android:id="@+id/apartmentwishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartment"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/bednumberwishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bedwishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="BEDS"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="."
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bathnumberwishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bathwishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="BATH"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/addresswishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Montreal"
                android:textSize="25dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>


</RelativeLayout>